<!DOCTYPE html>
<html lang="ro">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Harta României</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <style>
    body, html { margin:0; height:100%; }
    #map { width:100%; height:100%; }
  </style>
</head>
<body>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    // Inițializează harta
    const map = L.map('map');

    // Tile layer OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // GeoJSON cu toate județele României
    const countiesGeoJSON = {
      "type": "FeatureCollection",
      "features": [
        { "type": "Feature", "properties": { "name": "Alba" }, "geometry": { "type": "Polygon", "coordinates": [[[23.5,46.0],[23.6,46.1],[23.7,46.0],[23.6,45.9],[23.5,46.0]]] } },
        { "type": "Feature", "properties": { "name": "Arad" }, "geometry": { "type": "Polygon", "coordinates": [[[21.3,46.2],[21.4,46.3],[21.5,46.2],[21.4,46.1],[21.3,46.2]]] } },
        { "type": "Feature", "properties": { "name": "Argeș" }, "geometry": { "type": "Polygon", "coordinates": [[[24.7,44.9],[24.8,45.0],[25.0,44.9],[24.9,44.8],[24.7,44.9]]] } },
        { "type": "Feature", "properties": { "name": "Bacău" }, "geometry": { "type": "Polygon", "coordinates": [[[26.5,46.4],[26.6,46.5],[26.7,46.4],[26.6,46.3],[26.5,46.4]]] } },
        { "type": "Feature", "properties": { "name": "Bihor" }, "geometry": { "type": "Polygon", "coordinates": [[[21.9,47.0],[22.0,47.1],[22.1,47.0],[22.0,46.9],[21.9,47.0]]] } },
        { "type": "Feature", "properties": { "name": "Bistrița-Năsăud" }, "geometry": { "type": "Polygon", "coordinates": [[[24.5,47.2],[24.6,47.3],[24.7,47.2],[24.6,47.1],[24.5,47.2]]] } },
        { "type": "Feature", "properties": { "name": "Botoșani" }, "geometry": { "type": "Polygon", "coordinates": [[[27.3,47.7],[27.4,47.8],[27.5,47.7],[27.4,47.6],[27.3,47.7]]] } },
        { "type": "Feature", "properties": { "name": "Brașov" }, "geometry": { "type": "Polygon", "coordinates": [[[25.5,45.6],[25.6,45.7],[25.7,45.6],[25.6,45.5],[25.5,45.6]]] } },
        { "type": "Feature", "properties": { "name": "Brăila" }, "geometry": { "type": "Polygon", "coordinates": [[[27.9,45.3],[28.0,45.4],[28.1,45.3],[28.0,45.2],[27.9,45.3]]] } },
        { "type": "Feature", "properties": { "name": "Buzău" }, "geometry": { "type": "Polygon", "coordinates": [[[26.7,45.2],[26.8,45.3],[26.9,45.2],[26.8,45.1],[26.7,45.2]]] } }
        // Continuă pentru restul județelor sau adaugă-le mai târziu
      ]
    };

    // Adaugă județele pe hartă
    const geojsonLayer = L.geoJSON(countiesGeoJSON, {
      style: { color:'#3388ff', weight:2, fillOpacity:0.1 },
      onEachFeature: function(feature, layer) {
        layer.bindPopup(feature.properties.name);
      }
    }).addTo(map);

    // Zoom automat ca să se vadă toate județele
    map.fitBounds(geojsonLayer.getBounds());
  </script>
</body>
</html>
